<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Add New Post</h3>
      <%= form_for @event do |f| %>
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :details, "Details" %>
        <%= f.text_area :details, class: 'form-control' %>
        <%= f.label :date, "Date" %>
        <%= f.date_field :date, class: 'form-control' %>
        <%= f.submit "Create", class: "btn btn-primary mt-2" %>
      <% end %>
  </div>
</div>